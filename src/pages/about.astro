---
import Layout from "../layouts/Layout.astro";
import Breadcrumb from "../components/Breadcrumb.astro";
import { getCollection, render } from "astro:content";
import { SITE_CONFIG } from "../config/site";

const aboutEntries = await getCollection("about");
const aboutEntry = aboutEntries[0];
const { Content } = await render(aboutEntry);

const description = aboutEntry.data.description || SITE_CONFIG.description;
---

<Layout title={`About | ${SITE_CONFIG.siteName}`} description={description}>
  <article class="max-w-screen-md mx-auto px-6 py-12">
    <Breadcrumb
      items={[
        { label: "ホーム", href: "/" },
        { label: "About", href: "/about" },
      ]}
    />
    <h1 class="text-3xl font-bold mb-8 text-gray-900">About</h1>
    <div class="prose prose-slate max-w-none">
      <Content />
    </div>
  </article>
</Layout>
