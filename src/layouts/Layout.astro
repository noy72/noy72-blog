---
import Header from "../components/Header.astro";
import { SITE_CONFIG } from "../config/site";
import { buildCanonicalUrl, buildAbsoluteImageUrl } from "../lib/seo";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  isArticle?: boolean;
  noIndex?: boolean;
  publishedTime?: string;
}

const {
  title = SITE_CONFIG.siteName,
  description = SITE_CONFIG.description,
  image = SITE_CONFIG.defaultImage,
  isArticle = false,
  noIndex = false,
  publishedTime,
} = Astro.props;

const canonicalUrl = buildCanonicalUrl(Astro.url.pathname);
const absoluteImageUrl = buildAbsoluteImageUrl(image);
const ogType = isArticle ? "article" : "website";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;300;400&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {noIndex && <meta name="robots" content="noindex,nofollow" />}
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:site_name" content={SITE_CONFIG.siteName} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:image" content={absoluteImageUrl} />
    {
      isArticle && publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    <meta name="twitter:image" content={absoluteImageUrl} />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
